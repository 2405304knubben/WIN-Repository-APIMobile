<?xml version="1.0" encoding="UTF-8" ?>
<!-- Dit is het hoofdmenu van de app -->
<!-- Het is als de inhoudsopgave van een boek, maar voor onze app -->
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiApp1.MVVM.Views"
    BackgroundColor="{StaticResource Gray900}">
    
    <!-- Als je de app start, kom je op de pagina met alle bestellingen -->
    <!-- Het is als de voorpagina van een krant -->
    <ShellContent
        ContentTemplate="{DataTemplate views:OrdersPage}"
        Route="OrdersPage" />
</Shell>


