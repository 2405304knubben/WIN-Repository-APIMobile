<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiApp1.MVVM.Views"
    Title="App Shell">

    <ShellContent Title="Main" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="AddOrderPage" ContentTemplate="{DataTemplate views:AddOrderPage}" />
    <ShellContent Route="OrdersPage" ContentTemplate="{DataTemplate views:OrdersPage}"  />
</Shell>
