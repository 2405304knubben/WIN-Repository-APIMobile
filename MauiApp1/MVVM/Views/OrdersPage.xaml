<?xml version="1.0" encoding="utf-8" ?>
<ContentPage    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MauiApp1.ModelAPI"
    xmlns:viewmodel="clr-namespace:MauiApp1.MVVM.ViewModel"
    xmlns:converters="clr-namespace:MauiApp1.MVVM.Converters"
    x:Class="MauiApp1.MVVM.Views.OrdersPage"
    x:DataType="viewmodel:OrdersPageViewModel"
    BackgroundColor="#1C1C1C"
    Title="Bestellingen">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:LastDeliveryStateConverter x:Key="LastDeliveryStateConverter"/>
            <converters:CanStartDeliveryConverter x:Key="CanStartDeliveryConverter"/>
            <converters:CanInteractWithOrderConverter x:Key="CanInteractWithOrderConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="16,8">
        <!-- Header met Filters -->
        <HorizontalStackLayout Grid.Row="0" 
                             Spacing="12"
                             Margin="0,0,0,16">
            <Button Text="Alle bestellingen"
                    Command="{Binding ShowAllOrdersCommand}"
                    BackgroundColor="#9747FF"
                    TextColor="White"
                    Padding="16,8"/>
            <Button Text="Bestellingen van vandaag"
                    Command="{Binding ShowTodayOrdersCommand}"
                    BackgroundColor="#9747FF"
                    TextColor="White"
                    Padding="16,8"/>
            <Button Text="Actieve bestellingen"
                    Command="{Binding ShowActiveOrdersCommand}"
                    BackgroundColor="#9747FF"
                    TextColor="White"
                    Padding="16,8"/>
        </HorizontalStackLayout>

        <!-- Orders List -->
        <CollectionView Grid.Row="2"
                       ItemsSource="{Binding Orders}">
              <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Order">
                    <Grid Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <!-- Background Border -->
                            <Border StrokeShape="RoundRectangle 8"
                                    Background="#2D2D2D"
                                    Opacity="{Binding ., Converter={StaticResource CanInteractWithOrderConverter}}"/>
                            
                            <!-- Content Grid -->
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                 ColumnDefinitions="*,Auto,Auto"
                                 Padding="16">
                                
                                <!-- Order Header -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Id, StringFormat='Order #{0}'}"
                                       TextColor="White"
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding OrderDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       TextColor="Gray"
                                       Margin="0,0,16,0"
                                       VerticalOptions="Center"/>

                                <!-- Action Buttons -->
                                <HorizontalStackLayout Grid.Row="0" Grid.Column="2" Spacing="8">
                                    <Button Text="Info"
                                            TextColor="#007AFF"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersPageViewModel}}, Path=ShowOrderDetailsCommand}"
                                            CommandParameter="{Binding .}"
                                            Padding="0"/>
                                    <Button Text="Bezorging volgen"
                                            TextColor="#007AFF"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersPageViewModel}}, Path=GoToDeliveryTrackingCommand}"
                                            CommandParameter="{Binding .}"
                                            Padding="0"
                                            IsEnabled="{Binding DeliveryStates, Converter={StaticResource CanStartDeliveryConverter}}"/>
                                </HorizontalStackLayout>

                                <!-- Customer Info -->
                                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                   InputTransparent="{Binding ., Converter={StaticResource CanInteractWithOrderConverter}, ConverterParameter=true}">
                                    <Label Text="{Binding Customer.Name}"
                                           TextColor="White"
                                           FontSize="16"
                                           Margin="0,8,0,0"/>
                                    
                                    <Label Text="{Binding Customer.Address}"
                                           TextColor="Gray"/>
                                    
                                    <Label Text="{Binding Products.Count, StringFormat='{0} producten'}"
                                           TextColor="Gray"
                                           Margin="0,8,0,0"/>

                                    <!-- Status -->
                                    <Label TextColor="Gray"
                                           VerticalOptions="Center"
                                           Text="{Binding DeliveryStates, Converter={StaticResource LastDeliveryStateConverter}}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
