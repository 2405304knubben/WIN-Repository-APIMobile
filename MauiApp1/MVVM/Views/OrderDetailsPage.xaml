<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.MVVM.Views.OrderDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Order Details">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Order Details" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Id, StringFormat='Order #{0}'}" FontSize="18" FontAttributes="Bold" />
        <Label Text="{Binding OrderDate, StringFormat='Datum: {0:dd/MM/yyyy HH:mm}'}" FontSize="16" />
        <Label Text="{Binding Customer.Name, StringFormat='Klant: {0}'}" FontSize="16" />
        <Label Text="{Binding Customer.Address, StringFormat='Adres: {0}'}" FontSize="14" />
        <Label Text="{Binding Products.Count, StringFormat='Aantal producten: {0}'}" FontSize="14" />
        <Label Text="{Binding DeliveryStates.Count, StringFormat='Aantal leveringen: {0}'}" FontSize="14" />
        <Label x:Name="DebugLabel" Text="Debug info: " FontSize="12" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
